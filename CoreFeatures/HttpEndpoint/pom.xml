<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>info.smart_tools.smartactors</groupId>
        <artifactId>core-features</artifactId>
        <version>0.3.3</version>
    </parent>
    <groupId>info.smart_tools.smartactors</groupId>
    <artifactId>http-endpoint</artifactId>
    <version>0.3.3</version>
    <packaging>pom</packaging>
    <modules>
        <module>GetHeaderFromRequestRule</module>
        <module>HttpResponseSender</module>
        <module>DeserializeStrategyPostFormUrlencoded</module>
        <module>HttpRequestMaker</module>
        <module>ChannelHandlerNetty</module>
        <module>HttpEndpoint</module>
        <module>GetCookieFromRequestRule</module>
        <module>HttpResponseHandler</module>
        <module>HttpHeadersSetter</module>
        <module>HttpRequestSenderActor</module>
        <module>HttpClientInitializer</module>
        <module>DeserializeStrategyGet</module>
        <module>CompletableNettyFuture</module>
        <module>HttpClient</module>
        <module>ICookiesSetter</module>
        <module>ResponseContentJsonStrategy</module>
        <module>IHeadersExtractor</module>
        <module>DeserializeStrategyPostJson</module>
        <module>GetQueryParameterRule</module>
        <module>MessageToBytesMapper</module>
        <module>HttpServer</module>
        <module>TcpServer</module>
        <module>ResponseStatusExtractor</module>
        <module>NettyClient</module>
        <module>PluginHttpRequestSenderActor</module>
        <module>HttpResponseDeserializationStrategy</module>
        <module>IResponseStatusExtractor</module>
        <module>NettyServer</module>
        <module>HttpRequestHandler</module>
        <module>CookiesSetter</module>
        <module>EnvironmentHandler</module>
        <module>HttpClientHandler</module>
        <module>HttpEndpointDistribution</module>
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.5.1</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.19.1</version>
                    <configuration>
                        <useSystemClassLoader>false</useSystemClassLoader>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>3.0.0</version>
                    <executions>
                        <execution>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                        </execution>
                    </executions>
                    <inherited>true</inherited>
                </plugin>
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>2.8.2</version>
                    <executions>
                        <execution>
                            <id>default-deploy</id>
                            <phase>none</phase>
                        </execution>
                        <execution>
                            <id>archiva.smartactors-features</id>
                            <phase>deploy</phase>
                            <goals>
                                <goal>deploy-file</goal>
                            </goals>
                            <inherited>false</inherited>
                            <configuration>
                                <generatePom>true</generatePom>
                                <file>${project.parent.basedir}/project-distribution/${project.artifactId}-${project.parent.version}-archive.${deploy.fomat}</file>
                                <url>http://archiva.smart-tools.info/repository/smartactors-features/</url>
                                <repositoryId>archiva.smartactors-features</repositoryId>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>${project.artifactId}</artifactId>
                                <version>${project.version}</version>
                                <packaging>${deploy.fomat}</packaging>
                                <description>This archive contains ...</description>
                            </configuration>
                        </execution>
                    </executions>
                    <inherited>true</inherited>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
