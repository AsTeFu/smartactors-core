#!/bin/bash

if [ "$1" = "make" ]
then
    if [ "$2" = "test" ]
    then
        echo make project for tests
        mvn clean install package -Dbuild.format=jar -Dbuild.unpack=true
    else
        echo "make project"
        mvn clean install package -Dbuild.format=zip -Dbuild.unpack=false
    fi
elif [ "$1" = "deploy" ]
then
    if [ "$2" = "test" ]
    then
        mvn -Dmaven.test.skip=true -DdeployOnly=true -Ddeploy.fomat=jar deploy
    else
        mvn -Dmaven.test.skip=true -DdeployOnly=true -Ddeploy.fomat=zip deploy
    fi
    echo "deploy project components"
else
    java -D -jar /usr/share/das/das.jar $@
fi
